generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Contestant {
  id           String    @unique @id
  name         String
  motivation   String
  age          Int
  height       Int
  startWeight  Int
  goalWeight   Int
  waist        Int
  caloriesTarget Int?
  dataRecord   DataRecord[]
}

model DataRecord {
  id      Int      @id @default(autoincrement())
  type    String
  value   Int
  date    String
  details String?
  contestantId String
  contestant   Contestant  @relation(fields: [contestantId], references: [id])
}